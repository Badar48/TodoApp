 <h2>Listing all todes</h2>
 <%= link_to "create a new todo" , new_todo_path %>
 <table>
 	<tr>
 		<th>Names</th>
 		<th>Description</th>
 	</tr>
 	<% @listing.each do |list| %>
 	<tr>
 		<td><%= list.name %></td>
 		<td><%= list.description %></td>

 		 <td><%= link_to "Edit", edit_todo_path(list) %></td>
 		 <td><%= link_to "Show", todo_path(list) %></td>

  	</tr>
 	<% end %>
 </table>